{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "outDir": "./lib/cjs/",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true, // Added option
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*", "./public/*", "./app/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "projects/[id]/projects/projects"
  ],
  "exclude": ["node_modules", "dist", "lib"]
}
